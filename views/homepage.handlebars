<h3>Upload your recipe here</h3>
<form id="recipe-form">
    <label for="name">Name:</label>
    <input type="text" id="recipe-name" name="name" required>
    <label for="ingredients">Ingredients:</label>
    <input type="text" id="recipe-ingredients" name="ingredients" required>
    <label for="instructions">Instructions:</label>
    <input type="text" id="recipe-instructions" name="instructions" required>
    <label for="image">Photo:</label>
    <input type="file" id="recipe-photo" name="image">
    <button type="submit">Upload</button>
</form>

<script src="/js/uploadRecipe.js"></script>

{{#each recipes as |recipe|}}
    <a href="/recipe/{{id}}">
        <h2>{{name}}</h2>
        <img src="{{photo}}" alt="a photo of {{name}}">
        <h3>Ingredients:</h3>
        <ul>
            {{#each (makeList ingredients) as |ingredient| }}
            <li>{{ingredient}}</li>
            {{/each}}
        </ul>
        <h3>Instructions</h3>
        <ol>
            {{#each (makeList instructions) as |instruction| }}
            <li>{{instruction}}</li>
            {{/each}}
        </ol>
        <p>Recipe by {{user.username}}</p>
    </a>
</div>
{{/each}}