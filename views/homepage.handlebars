<h3>Upload your recipe here</h3>
<form id="recipe-form" action="/upload" method="POST" enctype="multipart/form-data">
    <label for="name">Name:</label>
    <input type="text" id="recipe-name" name="name" required>
    <label for="ingredients">Ingredients:</label>
    <input type="text" id="recipe-ingredients" name="ingredients" required>
    <label for="instructions">Instructions:</label>
    <input type="text" id="recipe-instructions" name="instructions" required>
    <label for="image">Photo:</label>
    <input type="file" id="recipe-photo" name="image" multiple>
    <button type="submit">Upload</button>
</form>

<script src="/js/uploadRecipe.js"></script>